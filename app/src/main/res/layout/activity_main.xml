<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainback"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/settings"
        android:layout_width="96dp"
        android:layout_height="203dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="241dp"
        android:layout_marginTop="724dp"
        android:layout_marginEnd="91dp"
        android:layout_marginBottom="24dp"
        android:contentDescription="SettingImg"
        app:srcCompat="@drawable/sett" />

    <ImageView
        android:id="@+id/camera"
        android:layout_width="96dp"
        android:layout_height="203dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="91dp"
        android:layout_marginTop="724dp"
        android:layout_marginEnd="242dp"
        android:layout_marginBottom="24dp"
        android:contentDescription="CameraIcon  "
        app:srcCompat="@drawable/camera" />

    <ImageView
        android:id="@+id/message"
        android:layout_width="96dp"
        android:layout_height="203dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="165.5dp"
        android:layout_marginTop="724dp"
        android:layout_marginEnd="165.5dp"
        android:layout_marginBottom="24dp"
        android:contentDescription="MessageIcon"
        app:srcCompat="@drawable/chat" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="196dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="25.5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="25.5dp"
        android:layout_marginRight="381dp"
        android:layout_marginBottom="753dp"
        android:background="@color/white"
        android:gravity="right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textSize="@dimen/_25sdp"
            android:textStyle="bold">

        </TextView>

        <ImageView
            android:id="@+id/LogOu"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/logout"
            android:contentDescription="TODO">

        </ImageView>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/MainUserRecyclerView"
        android:layout_width="370dp"
        android:layout_height="567dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="271dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="114dp" />


</RelativeLayout>